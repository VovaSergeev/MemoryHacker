<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fun1"
    android:gravity="center"
    tools:context=".Shop">

    <TextView
        android:id="@+id/currencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Токены: 1000"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/skin1Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/grey"
            android:text="Фрукты"
            android:textSize="12dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/skin2Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/grey"
            android:text="Атака титанов"
            android:textSize="12dp"
            app:backgroundTint="@null" />
        <Button
            android:id="@+id/skin3Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/grey"
            android:text="Блогеры"
            android:textSize="12dp"
            app:backgroundTint="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/skin1Preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/skin2Preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:id="@+id/skin3Preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"/>



    </LinearLayout>

    <Button
        android:id="@+id/purchaseButton"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grey"
        android:text=""
        app:backgroundTint="@null" />

    <Button

        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grey"
        android:text="Назад"
        android:textColor="@color/white"
        app:backgroundTint="@null" />

</LinearLayout>