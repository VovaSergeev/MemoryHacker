<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/easyImageView"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@drawable/blue"
        android:src="@drawable/easy"


        />

    <ImageView
        android:id="@+id/mediumImageView"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="@drawable/fon3"
        android:src="@drawable/medium" />

    <ImageView
        android:id="@+id/hardImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/hard"
        android:background="@drawable/fon4"

        />

    <ImageView
        android:id="@+id/insaneImageView"
        android:layout_width="fill_parent"
        android:layout_height="144dp"
        android:background="@drawable/fon5"



        android:src="@drawable/demon" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/grey"
        android:text="Назад"
        android:textSize="20sp"
        app:backgroundTint="@null" />

</android.widget.LinearLayout>